# LLMFed Environment Configuration

# Database
DATABASE_URL=sqlite:///./llmfed.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/llmfed

# API Server
API_HOST=0.0.0.0
API_PORT=8091

# LLM Configuration
# For OpenAI
# OPENAI_API_KEY=your-api-key-here
# OPENAI_MODEL=gpt-3.5-turbo

# For local Ollama
OPENAI_API_BASE=http://127.0.0.1:11434/v1
OPENAI_MODEL=long-gemma

# Federation Settings
MAX_AGENTS_PER_FEDERATION=20
DEFAULT_TIER=local

# Engine Settings
DEFAULT_TICK_INTERVAL=1
MAX_TICKS_PER_ADVANCE=100